{
    "pluginAlias": "Awtrix Plugin",
    "pluginType": "platform",
    "headerDisplay": "Homebridge plugin for an Awtrix Clock",
    "footerDisplay": "Rudolf-Michael Liebhart, June 2021",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Awtrix"
            },
            "ip": {
                "title": "Awtrix IP",
                "type": "string",
                "required": true,
                "format": "ipv4",
                "default": "192.168.1.2"
            },
            "port": {
                "title": "Awtrix port number",
                "type": "string",
                "required": true,
                "default": "7000"
            },
            "timer": {
                "title": "Timer",
                "type": "string",
                "required":"true",
                "pattern":"^[0-5][0-9]:[0-5][0-9]:00$"
            }
        }
    }
}